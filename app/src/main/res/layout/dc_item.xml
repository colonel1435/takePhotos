<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/colorLightGrey"
    tools:context=".DepotActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_dc_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/dc_title_size"/>

       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="4"
           android:layout_marginLeft="@dimen/dialog_depot_left_margin"
           android:layout_centerVertical="true">

           <Button
               android:id="@+id/dc_set_position"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:text="@string/dc_set_position"
               android:background="@color/colorAccent"
               android:onClick="onBtSetPositionClick"/>

           <View
               android:layout_width="2dp"
               android:layout_height="match_parent"
               android:background="@color/colorWhite"/>
           <Button
               android:id="@+id/dc_back_position"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:text="@string/dc_back_position"
               android:background="@color/colorAccent"
               android:onClick="onBtBackPositionClick"/>
       </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
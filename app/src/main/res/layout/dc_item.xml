<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DepotActivity">

        <TextView
            android:id="@+id/tv_dc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dialog_depot_left_margin"
            android:textSize="@dimen/dc_title_size"
            android:background="@color/colorDark"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/tv_dc_name"
           android:layout_marginLeft="@dimen/dialog_depot_left_margin">

           <Button
               android:id="@+id/dc_set_position"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/dc_set_position"
               android:onClick="onBtClick"/>
           <Button
               android:id="@+id/dc_back_position"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/dc_back_position"
               android:onClick="onBtClick"/>
       </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_depot"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/depot_item_height"
        android:layout_centerVertical="true"
        android:src="@drawable/depot_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/iv_depot">
        <TextView
            android:id="@+id/tv_depot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dialog_depot_top_margin" />

        <TextView
            android:id="@+id/tv_dc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_depot_top_margin"
            android:layout_marginBottom="@dimen/dialog_depot_bottom_margin" />
    </LinearLayout>
</RelativeLayout>
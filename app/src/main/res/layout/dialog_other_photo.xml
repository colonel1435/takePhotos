<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dialog_depot_top_margin"
    android:layout_marginBottom="@dimen/dialog_depot_bottom_margin">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dialog_depot_top_margin"
        android:layout_marginBottom="@dimen/dialog_depot_bottom_margin"
        android:layout_marginLeft="@dimen/dialog_depot_left_margin"
        android:text="@string/other_photo"
        android:textSize="@dimen/dc_title_size"/>

    <EditText
        android:id="@+id/et_other_photo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginTop="@dimen/dialog_depot_top_margin"
        android:layout_marginBottom="@dimen/dialog_depot_bottom_margin"
        android:layout_marginRight="@dimen/dialog_depot_right_margin"
        android:maxLines="1"
        android:maxLength="16"
        android:hint="@string/other_photo_msg"/>

</LinearLayout>